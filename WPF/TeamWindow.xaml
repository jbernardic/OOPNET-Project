<Window x:Class="WPF.TeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="TeamWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ScaleEffect" ScaleX="0.7" ScaleY="0.7"/>
        </Grid.LayoutTransform>
        <StackPanel>
            <TextBlock x:Name="lblCountry" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="FIFA Code: " FontWeight="Bold"/>
                <TextBlock x:Name="lblFifaCode"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Games Played: " FontWeight="Bold"/>
                <TextBlock x:Name="lblGamesPlayed"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Wins: " FontWeight="Bold"/>
                <TextBlock x:Name="lblWins"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Losses: " FontWeight="Bold"/>
                <TextBlock x:Name="lblLosses"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Draws: " FontWeight="Bold"/>
                <TextBlock x:Name="lblDraws"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Goals For: " FontWeight="Bold"/>
                <TextBlock x:Name="lblGoalsFor"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Goals Against: " FontWeight="Bold"/>
                <TextBlock x:Name="lblGoalsAgainst"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Goal Differential: " FontWeight="Bold"/>
                <TextBlock x:Name="lblGoalDifferential"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
