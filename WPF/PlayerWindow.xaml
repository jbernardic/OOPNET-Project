<Window x:Class="WPF.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="lblPlayerName" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Shirt Number: " FontWeight="Bold"/>
                <TextBlock x:Name="lblShirtNumber"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Captain: " FontWeight="Bold"/>
                <TextBlock x:Name="lblCaptain"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Goals: " FontWeight="Bold"/>
                <TextBlock x:Name="lblGoals"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Yellow Cards: " FontWeight="Bold"/>
                <TextBlock x:Name="lblYellowCards"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
