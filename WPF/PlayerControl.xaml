<UserControl x:Class="WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Width="60" Margin="5">
    <StackPanel Background="White">
        <Image x:Name="playerImage" Margin="0 0 0 0" Height="41" Width="60" RenderTransformOrigin="0.5,0.5"></Image>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Label x:Name="lblNumber" FontSize="10" FontWeight="Bold"/>
            <Label x:Name="lblName" FontSize="10" Width="Auto" />
        </StackPanel>

    </StackPanel>
</UserControl>